<div class="row">
<div class="col-sm-10 offset-sm-1 user-signup p-3" style="color: #FFF; font-family: Hiragino Sans;">
  
<h2>ユーザー新規登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :username, "（１）ユーザー名を登録してください。" %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control bg-light border" %>
  </div> 
  
  <div class="field form-group">
    <%= f.label :email, "（２） E-mailアドレスを登録してください。" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-light border"  %>
  </div>

  <div class="field form-group">
    <%= f.label :password, "（３）パスワードを登録してください。" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-light border"  %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, "（４）パスワードを再度入力してください。" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-light border"  %>
  </div>

  <div class="actions form-group">
    <%= f.submit "上記内容で登録する", class: "btn btn-outline-success" %>
  </div>
<% end %>

</div>

</div>
<%#= render "devise/shared/links" %>

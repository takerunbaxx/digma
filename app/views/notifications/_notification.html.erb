<% user = notification.user %>
<% package = notification.package %>

<ul class="list-inline user-view clearfix">
  <%= notification_form(notification) %><span class="moderate-font"><%= "(#{time_ago_in_words(notification.created_at)} 前)" %></span>
  <% if !@comment.nil? %>
    <%=link_to "コメントの詳細を確認する", package_path(package.id) %>
  <% end %>
  <% if !@reservation.nil? %>
    <%=link_to "予約の詳細を確認する", adminside_index_reservations_path %>
  <% end %>
  <hr>
</ul>
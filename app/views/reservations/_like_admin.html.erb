    <% @liked_admin.each do |liked_admin|%>
     <div class="card bg-light mb-3">
         <div class="card-body d-flex justify-content-between">
           <ul class="list-unstyled">
               <li><h5 class="text-dark"><%=liked_admin.facility_name%></h5></li>
               <li><p class="card-text"><%=link_to "詳細を見る", admin_path(liked_admin.id) %></p></li>
               <li><p class="card-text">カテゴリ:  <%=liked_admin.admins_category%></p></li>
               <li><p class="card-text"><%=liked_admin.supplementary_info%></p></li>
               <p class="card-text text-muted" style="font-weight:bold;">価格: &nbsp;<%=number_to_currency(liked_admin.packages.minimum(:price).to_i, :unit => "￥", precision: 4, strip_insignificant_zeros: true)%> &nbsp;円〜から</p>
           </ul>
           <div>
                       <% if liked_admin.avator == nil %>
                       <%= image_tag "/assets/default_post.png", class: "image-style-package flex-auto d-none d-md-bloc" %>
                       <% else %>         
                       <%= image_tag liked_admin.avator.variant(resize: '200x200') , class: "card-img-right flex-auto d-none d-md-block"%> 
                       <% end %>
           </div>
         </div>

     </div>
  <% end %>


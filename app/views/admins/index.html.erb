


<section class="jumbotron text-center">
    <div class="container">
      <h1>検索施設一覧  <span class="badge badge-secondary">該当件数●●件</span> </h1>
    </div>
</section>
  
<div class="album py-5 bg-light">
    <div class="row">
       <% @admins.each do |admin| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="d-flex pl-2">
          <%#= image_tag admin.admin_top_image.variant(resize: '300x400')%>
              <section class="pt-3 pl-3">
                <h6>施設名： <%=admin.admins_name%></h6>
              </section>
            </div>
            <div class="card-body">
              <p class="card-text"><%=admin.introduction1%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                 <%=link_to "施設について詳しく見る", admin_path(admin.id), class: "btn btn-sm btn-outline-secondary"%>
                </div>
                <small class="text-muted"><%= admin.created_at %></small>
              </div>
            </div>
          </div>
        </div>
      <%end%>
       
      </div>
  </div>
  

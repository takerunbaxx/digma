<div class="d-md-flex flex-md-equal w-100 my-md-2 pl-md-3">
    <% admins.each do |admin|%>
    <div class="card round box-shadow bg-light mr-md-3 pt-1 px-3 pt-md-1 px-md-5 text-center text-white overflow-hidden border border-secondary">
        <div class="my-2 py-1">
          <h2 class="display-5 p-2 bg-success border border-secondary rounded"><%=admin.facility_name%></h2>
          <p style="color: #000; font-family:Hiragino Sans;">カテゴリ：  <%=admin.admins_category%></p>
        </div>
        <div>
           <p class="bg-secondary">価格: &nbsp;<%=number_to_currency(admin.packages.minimum(:price).to_i, :unit => "￥", precision: 4, strip_insignificant_zeros: true)%> &nbsp;円〜</p>
          <%=image_tag admin.avator.variant(resize: "320x320"), class: "image-style-search"%> 
        </div>
    <section class="d-flex">
       <%if current_user%>
      <div class="like_form_<%= admin.id %> pt-3"> <%=render "likes/like_button", admin: admin%></div>
      <%end%>
      <div class="result-content pt-2 pl-5"><%=link_to "施設の詳細を見る >>", admin_path(admin.id), class: "btn btn-info" %></div>
    </section>
   </div>
    <%end%>
      <%= paginate admins %>
</div>

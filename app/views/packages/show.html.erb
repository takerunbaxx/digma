        <hr class="featurette-divider">
        
</div>

    <div class="col-sm-10 offset-sm-1 comments-area p-3 mb-5 border border-secondary">
      
        <p class="col-sm-8 offset-sm-2 border border-light text-center font-weight-bold bg-primary p-3">＊＊この商品パッケージの平均評価点＊＊</p>
        
        <h4 class="font-weight-bold">平均点：　<%= @average_score %>　点</h4>

        <div class="star-show" data-score=<%=@average_score%>>
           <label>獲得星数：</label>
        </div>
        
        <section class="mt-3"><%= render "comments/comment_list", comments: @comments%></section>
    </div>
      
      <div class="package-price text-center col-sm-8 offset-sm-2"><h3 class="border-bottom mb-5">お一人様価格： <%=number_to_currency(@package.price.to_i, :unit => "￥", precision: 4, strip_insignificant_zeros: true)%>　円　（税込）</h3></div>
     
     <div class="ml-sm-5 d-flex flex-column">
      <%if current_user%>
      <strong class="mt-5"><%=link_to "予約へすすむ >>",  new_package_reservation_path(package_id: @package.id)%></strong>
      <%end%>
     </div>
